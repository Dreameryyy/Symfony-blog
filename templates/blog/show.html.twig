{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ blog.title }}</h1>
    <p>{{ blog.content }}</p>
    <p>{{ blog.createdAt|date('Y-m-d H:i') }}</p>
    <p>{{ blog.author }} ({{ blog.email }})</p>

    <h2>Comments</h2>
    <ul>
        {% for comment in pagination.items %}
            <li>
                <p>{{ comment.content }}</p>
                <p>{{ comment.createdAt|date('Y-m-d H:i') }}</p>
                <p>{{ comment.author }} ({{ comment.email }})</p>
            </li>
        {% else %}
            <li>No comments found</li>
        {% endfor %}
    </ul>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>

    <h2>Add Comment</h2>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

    <a href="{{ path('app_blog_index') }}">back to list</a>
{% endblock %}
